    "phantom_paths": {
      "problem": "多个路径在文档中存在但实际未创建",
      "paths": [
        "csv_versions/comparison_cache",
        "csv_versions/comparison",
        "csv_versions/standard_outputs"
      ],
      "impact": "中 - 文档误导",
      "solution": "删除文档中的幽灵路径或创建这些目录"
    },
    "downloads_cleanup": {
      "problem": "downloads目录包含350+个UUID文件无清理机制",
      "impact": "中 - 磁盘空间浪费",
      "solution": "实现定期清理策略（建议7天）"
    }
  },

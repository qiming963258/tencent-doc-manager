{
  "alert_rules": {
    "cookie_failure": {
      "name": "Cookie认证失败",
      "description": "Cookie失效导致认证失败",
      "condition": "cookie_validity < 0.8",
      "severity": "critical",
      "actions": [
        "immediate_notification",
        "auto_cookie_refresh",
        "escalate_after_5min"
      ],
      "recovery_time": "5-15分钟",
      "business_impact": "完全服务中断"
    },
    "download_degradation": {
      "name": "下载性能降级",
      "description": "下载成功率或速度显著下降",
      "condition": "download_success_rate < 0.85 OR average_download_time > 60",
      "severity": "warning",
      "actions": [
        "performance_analysis",
        "resource_check",
        "notify_after_10min"
      ],
      "recovery_time": "10-30分钟",
      "business_impact": "服务质量下降"
    },
    "api_incompatibility": {
      "name": "API兼容性问题",
      "description": "腾讯文档API接口发生变更",
      "condition": "api_compatibility < 0.9",
      "severity": "critical",
      "actions": [
        "immediate_notification",
        "fallback_activation",
        "emergency_maintenance"
      ],
      "recovery_time": "30-120分钟",
      "business_impact": "系统需要紧急维护"
    },
    "system_resource_exhaustion": {
      "name": "系统资源耗尽",
      "description": "内存或磁盘使用率过高",
      "condition": "memory_usage > 0.9 OR disk_usage > 0.9",
      "severity": "warning",
      "actions": [
        "resource_cleanup",
        "scale_up_if_possible",
        "notify_devops"
      ],
      "recovery_time": "5-15分钟",
      "business_impact": "性能下降，可能导致服务中断"
    }
  },
  "escalation_matrix": {
    "level_1": {
      "timeout": "5分钟",
      "contacts": ["devops_oncall@company.com"],
      "channels": ["email", "sms"]
    },
    "level_2": {
      "timeout": "15分钟", 
      "contacts": ["devops_lead@company.com", "system_admin@company.com"],
      "channels": ["email", "sms", "phone"]
    },
    "level_3": {
      "timeout": "30分钟",
      "contacts": ["cto@company.com", "emergency_team@company.com"],
      "channels": ["email", "phone", "incident_management_system"]
    }
  },
  "notification_channels": {
    "email": {
      "smtp_server": "smtp.company.com",
      "smtp_port": 587,
      "username": "monitor@company.com",
      "from_address": "腾讯文档监控系统 <monitor@company.com>",
      "encryption": "starttls"
    },
    "sms": {
      "provider": "aliyun_sms",
      "api_key": "your_api_key",
      "template_id": "SMS_ALERT_TEMPLATE"
    },
    "webhook": {
      "slack_webhook": "https://hooks.slack.com/services/your/webhook/url",
      "dingtalk_webhook": "https://oapi.dingtalk.com/robot/send?access_token=your_token"
    }
  },
  "maintenance_windows": [
    {
      "name": "daily_maintenance",
      "schedule": "02:00-03:00",
      "timezone": "Asia/Shanghai",
      "suppress_alerts": ["warning"],
      "allow_alerts": ["critical", "emergency"]
    },
    {
      "name": "weekly_maintenance", 
      "schedule": "Sunday 01:00-04:00",
      "timezone": "Asia/Shanghai",
      "suppress_alerts": ["warning", "info"],
      "allow_alerts": ["critical", "emergency"]
    }
  ]
}
# 腾讯文档自动化服务 - 性能优化版本
FROM python:3.11-slim

# 设置环境变量
ENV PLAYWRIGHT_BROWSERS_PATH=/app/browsers
ENV PYTHONUNBUFFERED=1
ENV DEBIAN_FRONTEND=noninteractive

# 安装系统依赖 - Ubuntu优化
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    ca-certificates \
    fonts-liberation \
    fonts-noto-cjk \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libdrm2 \
    libxkbcommon0 \
    libgtk-3-0 \
    libgbm1 \
    libasound2 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /tmp/* \
    && rm -rf /var/tmp/*

# 设置工作目录
WORKDIR /app

# 复制依赖文件并安装Python包
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# 安装 Playwright 浏览器 - 优化版本
RUN playwright install chromium && \
    playwright install-deps chromium

# 创建非root用户
RUN useradd -m -u 1000 appuser && \
    mkdir -p /app/browsers /app/data /app/uploads /app/downloads /app/static /app/templates /app/logs && \
    chown -R appuser:appuser /app

# 复制应用代码
COPY --chown=appuser:appuser . .

# 设置浏览器优化参数
ENV PLAYWRIGHT_CHROMIUM_ARGS="--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage --disable-gpu --disable-extensions --disable-plugins --memory-pressure-off --max_old_space_size=512"

# 切换到非root用户
USER appuser

# 暴露端口
EXPOSE 5000

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:5000/api/health', timeout=5)"

# 启动应用 - 使用优化配置
CMD ["python", "app.py"]
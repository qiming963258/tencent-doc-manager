{
  "task_id": "weekly_summary",
  "name": "周度汇总报告",
  "schedule": {
    "type": "cron",
    "expression": "0 18 * * 5",
    "timezone": "Asia/Shanghai"
  },
  "urls": [
    "https://docs.qq.com/sheet/DYkNJRlp0cWRWZUlH?tab=weekly_summary",
    "https://docs.qq.com/sheet/DYkNJRlp0cWRWZUlH?tab=performance_metrics"
  ],
  "cookies": "your_cookies_here",
  "options": {
    "concurrent_limit": 2,
    "timeout": 90,
    "retry_times": 3,
    "compare_with_previous": true,
    "keep_history_days": 30
  },
  "notification": {
    "enabled": true,
    "notify_on_change": true,
    "notify_on_error": true,
    "webhook_url": "http://localhost/api/weekly-report"
  }
}